<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h4>Here are all your BORING tasks for this LIST:</h4>

  <ul>
    <% @list.tasks.each do |task| %>

      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_tasks_path(@list, task) %> |
        <%= link_to "Delete", list_tasks_path(@list, task),
                          :data => {:confirm => "ARE YOU SURE?",
                                          :method => "delete"} %>
      </li>
    <% end %>
  </ul>

  <% else %>

    <p>There are no BORING tasks, GET STARTED!</p>

  <% end %>


  <p><%= link_to "Add a task", new_list_tasks_path(@list) %></p>
  <p><%= link_to "Delete List", list_path(@list),
                          :data => {:confirm => "Are you sure?",
                                         :method => "delete"} %></p>

  <p><%= link_to "Return to lists", lists_path %></p>
